= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .container
    .row
      .col-md-6
        %p.lead
          Sign in
        .form-group
          = f.input :email, required: false, autofocus: true, input_html: {class: 'form-control'}
          = f.input :password, required: false, input_html: {class: 'form-control'}
          = hidden_field_tag 'auth_source', 'web'
          .checkbox
            %label
              = f.input :remember_me, as: :boolean, label: false if devise_mapping.rememberable?
              Remember me
        .form-actions
          = f.button :submit, 'Sign in', class: 'btn btn-success'
          = render 'devise/shared/links'
