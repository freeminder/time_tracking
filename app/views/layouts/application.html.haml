!!!
%html
	%head
		%title DPI Time Tracking
		= stylesheet_link_tag 'application', media: :all
		= javascript_include_tag 'application'
	%body
		.nav.navbar.navbar-default{role: 'navigation'}
			.container-fluid
				.navbar-header
					%button.navbar-toggle{type: "button", data: {toggle: 'collapse', target: '#bs-example-navbar-collapse-1' } }
						%span.sr-only Toggle navigation
						%span.icon-ba
						%span.icon-ba
						%span.icon-ba
					%a.navbar-brand{href: '#'} DPI Time Tracking
				.collapse.navbar-collapse#bs-example-navbar-collapse-1
					%ul.nav.navbar-nav
						- if current_user
							= menu_link 'Reports', report_path(current_user)
							%li.dropdown
								= link_to "My Tab <b class=\"caret\"></b>".html_safe, '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
								%ul.dropdown-menu.multi-level
									/= menu_link 'Users', list_users_path(current_user)
									/= menu_link 'Teams', team_path(current_user)
									/= menu_link 'Categories', category_path(current_user)

							= menu_link 'Log out', destroy_user_session_path, false, method: :delete
							%li
								%a= "Logged in as #{current_user.email}"
						- else
							%li.dropdown
								= link_to 'Sign/Log in<b class="caret"></b>'.html_safe, '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
								%ul.dropdown-menu
									= menu_link 'Log in', new_user_session_path
									= menu_link 'Sign up', new_user_registration_path, false
									
		- flash.each do |name, msg|
			%div{class: "alert alert-#{name == 'notice' ? "success" : "error"}"}
				%a.close{'data-dismiss' => "alert"} &#215;
				= content_tag :div, msg, :id => "flash_#{name}"
		
		- if current_user.try(:pause?)
			.alert.alert-danger
				You have a swap break! Don't forget to turn it off.

		.modal.fade
			.modal-dialog
				.modal-content
					.modal-header
						%button.close{type: 'button', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'} &times;
						%h4.modal-title Modal title
					
					.modal-body
						%p One fine body&hellip;
					
					.modal-footer
						%button.btn.btn-default{type: 'button', 'data-dismiss' => 'modal'} Cancel
						/ %button.btn.btn-primary{type: 'button'} Continue!
					</div>

		= yield