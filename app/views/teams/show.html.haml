.container
  .row
    .col-md-4
      %h3
        %b= "Members of #{@team.name} team: "
      %hr
      %div{ align: "right" }
        - @team.users.each do |user|
          = link_to "#{user.full_name} (#{user.email})", user_path(user)
          %br/
        %hr
        = link_to "Go back", :back, class: "btn btn-primary"
        = link_to "Delete", team_path(@team), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"
        = link_to "Edit", edit_team_path, class: "btn btn-success"
