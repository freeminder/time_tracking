.container
  .row
    .col-md-4
      %h3
        %b Add user
      %hr
      = simple_form_for @user do |f|
        = f.error_notification
        .form-group
          = f.input :email
          = f.input :first_name
          = f.input :last_name
          = f.input :rate, as: :integer, input_html: { min: "0", max: "200", step: "any" }
          = f.input :password, hint: false, error_html: { id: "password_error"}
          = f.input :password_confirmation, label: false
          = f.input :team_id, :as => :select, collection: @teams, prompt: "Select team"
          %div{ align: "right" }
            %b Admin
            = f.input_field :admin, as: :boolean, boolean_style: :inline
        .form-actions
          = link_to "Go back", :back, class: "btn btn-primary"
          = f.button :submit, "Create", class: "btn btn-primary"
